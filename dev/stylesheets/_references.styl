
/******************************************************************************/
/* Reference  *****************************************************************/


// Header
.header--top
  padding $step*2 $step*4

  background-color white

  .logo--image
    float   none
    height  50px
    width   @height

  .close
    position  absolute
    top       10px
    right     @top



// Reference : Wrappers

.template--references
.template--references main
  height auto
  @media screen and (min-width ($tabletPortrait['width'])) and (min-height $tabletLandscape['height'])
    height 100%
    
    .reference
      height 80%
    


    
.reference
  padding $paddingViewport-mobile
  color   white
    
  


// Reference : Content

.reference--logo
  .reference--logo-image
    display           block
    width             100%
    padding-bottom    33%
    overflow          hidden
    background-size   cover
    background-repeat no-repeat
    horizontalAlign()
  
  .template--references &
    .reference--logo-image
      horizontalAlign(5%, 5%)
      
      @media screen and (min-width ($tabletPortrait['width'])) and (min-height $tabletLandscape['height'])
        margin 0



@media screen and (max-width $tabletLandscape['max-width'])

  .reference--logo-wrapper
    position     absolute
    width        50%
    height       auto
    top          25%
    left         50%
    margin-left  -25vw
    
    @media (min-width $tabletPortrait['width'])
      width 40%
      margin-left  -20vw
        
    @media (min-height em(220))
      top 20%
    
    @media (min-height em(330))
      top 13%

    @media (min-height em(440))
      top 14%
      
    @media (min-height em(560))
      top 16%
      
    @media (min-height em(640))
      top 20%

  .reference--description-wrapper
    position relative
    top 120%
    margin 0 auto
    
    @media (min-width $phoneLandscape['width'])
      width 90%
      
    @media (min-width em(600))
      width 80%
    
    @media (min-width $tabletPortrait['width'])
      width 70%
      
    @media (min-height em(220))
      top 90%
      
    @media (min-height em(270))
      top 70%  
    
    @media (min-height em(330))
      top 45%




@media screen and (min-width $tabletLandscape['width'])
      
  .reference--logo-wrapper
  .reference--description-wrapper
    display table
    width 40%
    height 100%
    position relative
    top auto
    right auto
    float left
    
  .reference--description-wrapper
    width 60%
    @media (min-height em(480))
      top auto
    
  .reference--description
  .reference--logo
    display table-cell
    vertical-align middle
  
  .reference--logo
    max-width auto
    .reference--logo-image
      margin          0
      width           50%
      padding-bottom  16.5%
  
  .reference--description
    padding 0 $step*6 0 $step*12
  

@media screen and (min-width $laptop['min-width'])
  .reference--description
    padding 0 $step*16

@media screen and (min-width $laptop['min-width']) and ( min-height $laptop['height-small'])
  .reference--logo
    .reference--logo-image
      width  35%
      padding-bottom  11.55%

@media screen and (min-width $laptop['min-width']) and ( min-height $laptop['height-regular'])
  .reference--logo
    .reference--logo-image
      width  42%
      padding-bottom  13.86%
    
@media screen and (min-width $laptop['min-width']) and ( min-height $laptop['height-large'])
  .reference--logo
    .reference--logo-image
      width  50%
      padding-bottom  16.5%
      
@media screen and (min-width $desktop)
  .reference--description
    padding 0 $step*32 0 0
    



// Reference : Navigation

.reference--nav
  margin-top  $step*10
  overflow    hidden
  
  &.reference--nav-inner
    display   block
    position  absolute
    left      0
    width     100%

  &.reference--nav-outer
    display none
    padding $paddingViewport-mobile
    
  @media screen and (min-width $tabletPortrait['width']) and (min-height em(800)), screen and (min-width $tabletLandscape['width']), screen and (min-height em(800))
    // @extend .modal .reference--nav !
    position  absolute
    bottom    $step*8
    right     $step*6
    left      @right
    
    &.reference--nav-inner
      display none

    &.reference--nav-outer
      display block
      
      .modal &
        position  absolute
        right     0
        bottom    0
        left      0  
      
  @media screen and (min-width $laptop['min-width'])
    bottom    $step*14
    right     $step*12
    left      @right
    
    .template--references &
      bottom    $step*6
      right     $step*4
      left      @right




// Nav controls //
      
.reference--nav-control
  display inline-block
  padding 0

  a
  span
    display         table-cell
    height          $step*12
    width           @height
    opacity         1
    background      transparent url("/_assets/i/__nav_references.svg") no-repeat
    background-size cover
    
    will-change opacity, transform
    transition  opacity $t-reg ease-out,
                transform $t-reg ease-out
    
    &:hover
      opacity 0.5
      
      transition  opacity $t-fast ease-in,
                  transform $t-fast ease-in
      
    

  &.reference--nav-prev
    float left
    
    .reference--nav-inner &
      margin-left -15px
    
    a
    span 
      background-position left center
      
      &:hover
        transform translateX(-5%)


  &.reference--nav-next
    float right
    
    .reference--nav-inner &
      margin-right -15px
    
    a
    span
      background-position center center
      
      &:hover
        transform translateX(5%)
    

  &.reference--nav-close
    position    absolute
    left        50%
    margin-left -(step(60)/2)
    
    a
    span
      background-position right center
      
      &:hover
        transform scale(1.1)
    
    @media screen and (min-width $laptop['min-width'])
      position fixed
      top $paddingViewport-mobile
      right @top
      left auto
      margin-left 0
