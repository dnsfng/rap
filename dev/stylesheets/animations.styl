/* Shutter *****************************************************************/

.main--shutter
  display         none
  pointer-events  none
  @media screen and (min-width $laptop['min-width'])
    .js &
      display block
      

.main--shutter-wrapper
  position fixed
  top 0
  bottom 0
  left 0
  right 0

  &:nth-child(even)
    .flap
      // background-color red
      background-color white
      
  &:nth-child(4)
    .shutter-ne
      border-bottom $grey_light 1px solid
    



.shutter
  position absolute
  width 300%
  height 300%
  overflow hidden
  
  &.shutter-ne
    transform-origin 0% 100%
    transform translate3d(0, -100%, 0) rotate(45deg)
    
  &.shutter-sw
    transform-origin 0% 0%
    transform translate3d(0, -1px, 0) rotate(45deg)
    



.flap
  background-color black
  // background-color blue
  position absolute
  width 100%
  height 100%
  transform-origin 0% 0%
  margin-left 130vh
  
  .shutter-ne &
    transform-origin 0% 100%
    transform translate3d(10%, 0, 0) rotate(65deg)
    .main--shutter-00 &
      transform translate3d(0, 0 ,0) rotate(65deg)
    
  .shutter-sw &
    transform translate3d(10%, 0, 0) rotate(-65deg)
    .main--shutter-00 &
      transform translate3d(0, 0, 0) rotate(-65deg)
  

    
        
.next-section__wrapper
  width 100%
  height 1px
  position fixed
  top 0
  left 0
  transform-origin 0 100%
  transform rotate(45deg) translateY(-1px)
  

.next-section__arrow
  display block
  width 40px
  height @width
  margin -(@width/2) 0 0 133vh
  background-color rgba(white, 0.5)
  color white
  text-align center
  
  .even &
    background-color rgba(black, 0.5)
    color black
    


