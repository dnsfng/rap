/* Section 00 *****************************************************************/

.main--shutter
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  display none
  @media screen and (min-width $laptop['min-width'])
    .js &
      display block
    


.next-section
  position fixed
  z-index 10
  width 20px
  height 20px
  bottom 20px
  test(0)
  text-align center
  margin 95vh 0 0 0



.shutter
  position absolute
  width 300%
  height 300%
  overflow hidden
  
  &.shutter-ne
    transform-origin 0% 100%
    transform translate3d(0, -100%, 0) rotate(45deg)
    
  &.shutter-sw
    transform-origin 0% 0%
    transform translate3d(0, -1px, 0) rotate(45deg)
    



.flap
  background-color black
  // background-color blue
  position absolute
  width 100%
  height 100%
  transform-origin 0% 0%
  margin-left 130vh
  
  .shutter-ne &
    transform-origin 0% 100%
    transform translate3d(10%, 0, 0) rotate(65deg)
    .main--shutter-00 &
      transform translate3d(0, 0 ,0) rotate(65deg)
    
  .shutter-sw &
    transform translate3d(10%, 0, 0) rotate(-65deg)
    .main--shutter-00 &
      transform translate3d(0, 0, 0) rotate(-65deg)
  

    
    
.main--shutter
  .main--shutter-wrapper
    &:nth-child(even)
      .flap
        // background-color red
        background-color white
        
    &:last-child
      .shutter-ne
        border-bottom $grey_light 1px solid


